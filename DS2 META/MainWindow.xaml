<Window x:Class="DS2_META.MainWindow"
        x:Name="DS2META"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpfTool="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:DS2_META"
        mc:Ignorable="d"
        Title="DS2 Debug Tool" Height="755" Width="450" Background="DarkGray" Loaded="Window_Loaded" Closing="Window_Closing" Icon="Ladder.ico" ResizeMode="NoResize">

    <Window.DataContext>
        <local:DS2ViewModel x:Name="viewModel"/>
    </Window.DataContext>

    <Grid>
        <Grid Height="95" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Process:" />
                    <Label Name="lblProcess" Content="No"/>
                </StackPanel>
            </StackPanel >
            <StackPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Loaded:" />
                    <Label Name="lblLoaded" Content="No"/>
                </StackPanel>
            </StackPanel >
            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                <Label x:Name="labelCheckVersion" Content="Check Version"/>
                <Label x:Name="llbNewVersion" Visibility="Hidden">
                    <Hyperlink x:Name="link" Hyperlink.RequestNavigate="link_RequestNavigate">
                        <TextBlock Text="New version available!" />
                    </Hyperlink>
                </Label>
            </StackPanel>
        </Grid>
       
        <TabControl Margin="0,75,0,0">
            <TabItem Header="Player">
                <Grid Background="LightGray">
                    <local:PlayerControl x:Name="metaPlayer" Hook="{Binding Hook}" GameLoaded="{Binding Loaded}"/>
                </Grid>
            </TabItem>
            <TabItem Header="Stats">
                <Grid Background="LightGray">
                    <local:StatsControl x:Name="metaStats" Hook="{Binding Hook}" GameLoaded="{Binding Loaded}"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="tabSettings" Header="Settings">
                <Grid Background="LightGray">
                    <TabControl >
                        <TabItem Header="Ganeral">
                        </TabItem>
                        <TabItem x:Name="tabHotkeys" Header="Hotkeys">
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Row="1">
                                    <Separator Visibility="Hidden"/>
                                    <CheckBox Content="Enable Hotkeys" x:Name="cbxEnableHotkeys"/>
                                    <Separator Visibility="Hidden"/>
                                    <CheckBox Content="Handle Hotkeys" x:Name="cbxHandleHotkeys"/>
                                    <Separator Visibility="Hidden"/>
                                    <Separator Margin="0,10,0,10"/>
                                    <local:HotkeyControl x:Name="hkeyStorePosition" HotkeyName="Store Position" />
                                    <local:HotkeyControl x:Name="hkeyRestorePosition" HotkeyName="Restore Position" />
                                </StackPanel>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
