<Window x:Class="DS2_META.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpfTool="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:DS2_META"
        mc:Ignorable="d"
        Title="DS2 Debug Tool" Height="650" Width="450" Background="DarkGray" Loaded="Window_Loaded">

    <Window.DataContext>
        <local:DS2ViewModel x:Name="viewModel"/>
    </Window.DataContext>

    <Grid>
        <StackPanel>
            <Label x:Name="labelCheckVersion" Content="Check Version" />
            <Label x:Name="llbNewVersion" Width="150" Height="30" Visibility="Hidden">
                <Hyperlink x:Name="link" Hyperlink.RequestNavigate="link_RequestNavigate">
                    <TextBlock Text="New version available!" />
                </Hyperlink>
            </Label>
        </StackPanel>
       
        <TabControl Margin="0,75,0,0">
            <TabItem Header="Player">
                <Grid Background="LightGray">
                </Grid>
            </TabItem>
            <TabItem Header="Stats">
                <Grid Background="LightGray">
                    <local:StatsControl Hook="{Binding Hook}"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
