<UserControl x:Class="DS2S_META.TabControls.OtherControls.BonfireNudControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:wpfTool="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DS2S_META.TabControls.OtherControls"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="75">
    <Grid >
        <Grid.ColumnDefinitions >
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <wpfTool:IntegerUpDown x:Name="nudValue" Value="{Binding ElementName=BonCon, Path=BonfireLevel}" Width="75" Grid.Column="1" HorizontalAlignment="Right"/>
    </Grid>
</UserControl>
