        <Button x:Name="btnOkay" Content="Okay" IsCancel="True" Grid.Row="3" Click="btnOkay_Click" Padding="1,1,1,1" MaxWidth="80" MaxHeight="25" Margin="0,15,0,15"/>
    </Grid>
</Window>
